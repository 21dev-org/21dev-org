---
interface Props {
  class?: string;
  opacity?: number;
}

const { class: className = '', opacity = 0.1 } = Astro.props;
---

<svg
  class:list={[className]}
  width="100%"
  height="100%"
  xmlns="http://www.w3.org/2000/svg"
  style={`opacity: ${opacity}`}
>
  <defs>
    <pattern
      id="hash-pattern"
      width="60"
      height="60"
      patternUnits="userSpaceOnUse"
      patternTransform="rotate(45)"
    >
      <!-- Hash symbol representation -->
      <g fill="none" stroke="currentColor" stroke-width="1">
        <!-- Horizontal lines -->
        <line x1="10" y1="20" x2="50" y2="20" opacity="0.3"></line>
        <line x1="10" y1="40" x2="50" y2="40" opacity="0.3"></line>
        <!-- Vertical lines -->
        <line x1="20" y1="10" x2="20" y2="50" opacity="0.3"></line>
        <line x1="40" y1="10" x2="40" y2="50" opacity="0.3"></line>
      </g>
      <!-- Bitcoin B hint -->
      <circle
        cx="30"
        cy="30"
        r="8"
        fill="none"
        stroke="currentColor"
        stroke-width="0.5"
        opacity="0.2"></circle>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill="url(#hash-pattern)"></rect>
</svg>
