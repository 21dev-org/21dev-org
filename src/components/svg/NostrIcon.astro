---
interface Props {
  class?: string;
  size?: number;
}

const { class: className = '', size = 24 } = Astro.props;
---

<svg
  class={className}
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-label="Nostr"
>
  <defs>
    <linearGradient id="nostr-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6" />
      <stop offset="100%" style="stop-color:#7C3AED" />
    </linearGradient>
  </defs>
  <circle cx="12" cy="12" r="10" fill="url(#nostr-gradient)" />
  <path
    d="M12 6c-3.3 0-6 2.7-6 6s2.7 6 6 6 6-2.7 6-6-2.7-6-6-6zm0 10c-2.2 0-4-1.8-4-4s1.8-4 4-4 4 1.8 4 4-1.8 4-4 4z"
    fill="white"
    fill-opacity="0.9"
  />
  <circle cx="12" cy="12" r="2" fill="white" />
  <path
    d="M12 8v2M12 14v2M8 12h2M14 12h2"
    stroke="white"
    stroke-width="1.5"
    stroke-linecap="round"
    stroke-opacity="0.6"
  />
</svg>
