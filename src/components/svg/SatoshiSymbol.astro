---
interface Props {
  class?: string;
  size?: number;
}

const { class: className = '', size = 24 } = Astro.props;
---

<svg
  class={className}
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-label="Satoshi"
>
  <defs>
    <linearGradient id="sat-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F7931A"></stop>
      <stop offset="100%" style="stop-color:#EA580C"></stop>
    </linearGradient>
  </defs>

  <!-- Satoshi symbol (stylized S with lines) -->
  <g fill="url(#sat-gradient)">
    <!-- Horizontal lines -->
    <rect x="6" y="5" width="12" height="1.5" rx="0.5"></rect>
    <rect x="6" y="9" width="12" height="1.5" rx="0.5"></rect>
    <rect x="6" y="13.5" width="12" height="1.5" rx="0.5"></rect>
    <rect x="6" y="17.5" width="12" height="1.5" rx="0.5"></rect>

    <!-- Vertical line (S shape hint) -->
    <rect x="11" y="3" width="2" height="18" rx="0.5"></rect>
  </g>
</svg>
