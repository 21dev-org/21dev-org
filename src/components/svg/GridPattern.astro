---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<svg
  class={className}
  viewBox="0 0 100 100"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-hidden="true"
  preserveAspectRatio="none"
>
  <defs>
    <pattern id="grid-pattern" width="10" height="10" patternUnits="userSpaceOnUse">
      <path
        d="M 10 0 L 0 0 0 10"
        fill="none"
        stroke="currentColor"
        stroke-width="0.3"
        stroke-opacity="0.1"></path>
    </pattern>
    <pattern id="grid-dots" width="10" height="10" patternUnits="userSpaceOnUse">
      <circle cx="0" cy="0" r="0.5" fill="currentColor" opacity="0.15"></circle>
    </pattern>
  </defs>

  <rect width="100" height="100" fill="url(#grid-pattern)"></rect>
  <rect width="100" height="100" fill="url(#grid-dots)"></rect>
</svg>
