---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<svg
  class={className}
  viewBox="0 0 240 100"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-label="Bitcoin Wallets"
>
  <defs>
    <linearGradient id="hot-wallet" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F7931A" />
      <stop offset="100%" style="stop-color:#EA580C" />
    </linearGradient>
    <linearGradient id="cold-wallet" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3B82F6" />
      <stop offset="100%" style="stop-color:#1D4ED8" />
    </linearGradient>
    <filter id="wallet-shadow">
      <feDropShadow dx="0" dy="2" stdDeviation="2" flood-opacity="0.15" />
    </filter>
  </defs>

  <!-- Hot Wallet (Mobile) -->
  <g class="hot-wallet" filter="url(#wallet-shadow)">
    <!-- Phone body -->
    <rect x="20" y="15" width="35" height="60" rx="4" fill="url(#hot-wallet)" />
    <rect x="23" y="20" width="29" height="45" rx="2" fill="white" opacity="0.9" />

    <!-- Screen content -->
    <text x="37.5" y="32" text-anchor="middle" fill="#F7931A" font-size="8" font-weight="bold">0.05</text>
    <text x="37.5" y="40" text-anchor="middle" fill="#78716C" font-size="5">BTC</text>

    <!-- Bitcoin icon on screen -->
    <circle cx="37.5" cy="52" r="6" fill="#F7931A" opacity="0.2" />
    <text x="37.5" y="55" text-anchor="middle" fill="#F7931A" font-size="7" font-weight="bold">₿</text>

    <!-- Home button -->
    <circle cx="37.5" cy="70" r="3" fill="white" opacity="0.3" />

    <!-- WiFi indicator (connected) -->
    <g transform="translate(45, 18)" fill="#22C55E">
      <path d="M0 4 Q3 1 6 4" stroke="#22C55E" stroke-width="1" fill="none" />
      <path d="M1 3 Q3 1.5 5 3" stroke="#22C55E" stroke-width="1" fill="none" />
      <circle cx="3" cy="4" r="1" />
    </g>
  </g>

  <!-- Label: Hot Wallet -->
  <g fill="currentColor" opacity="0.7">
    <text x="37.5" y="88" text-anchor="middle" font-size="6">熱錢包</text>
    <text x="37.5" y="96" text-anchor="middle" font-size="4" opacity="0.6">連網・方便</text>
  </g>

  <!-- VS divider -->
  <g class="divider">
    <line x1="85" y1="30" x2="85" y2="70" stroke="currentColor" stroke-width="1" stroke-dasharray="3 3" opacity="0.2" />
    <circle cx="85" cy="50" r="10" fill="var(--bg-secondary, #f5f5f4)" stroke="currentColor" stroke-width="1" opacity="0.3" />
    <text x="85" y="53" text-anchor="middle" fill="currentColor" font-size="6" opacity="0.5">VS</text>
  </g>

  <!-- Cold Wallet (Hardware) -->
  <g class="cold-wallet" filter="url(#wallet-shadow)">
    <!-- Device body -->
    <rect x="110" y="25" width="50" height="35" rx="4" fill="url(#cold-wallet)" />

    <!-- Screen -->
    <rect x="115" y="30" width="40" height="18" rx="2" fill="#1E3A5F" />

    <!-- Screen content -->
    <text x="135" y="40" text-anchor="middle" fill="#22C55E" font-size="6" font-family="monospace">VERIFIED</text>
    <text x="135" y="46" text-anchor="middle" fill="white" font-size="4" opacity="0.7">bc1q...x3f9</text>

    <!-- Buttons -->
    <circle cx="122" cy="54" r="3" fill="#1E3A5F" />
    <circle cx="135" cy="54" r="3" fill="#1E3A5F" />
    <circle cx="148" cy="54" r="3" fill="#1E3A5F" />

    <!-- USB connector -->
    <rect x="130" y="60" width="10" height="6" rx="1" fill="#78716C" />

    <!-- No WiFi (offline indicator) -->
    <g transform="translate(152, 28)">
      <line x1="0" y1="0" x2="6" y2="6" stroke="#EF4444" stroke-width="1.5" />
      <line x1="6" y1="0" x2="0" y2="6" stroke="#EF4444" stroke-width="1.5" />
    </g>
  </g>

  <!-- Label: Cold Wallet -->
  <g fill="currentColor" opacity="0.7">
    <text x="135" y="88" text-anchor="middle" font-size="6">冷錢包</text>
    <text x="135" y="96" text-anchor="middle" font-size="4" opacity="0.6">離線・安全</text>
  </g>

  <!-- Security comparison -->
  <g class="comparison" transform="translate(175, 20)">
    <rect x="0" y="0" width="55" height="60" rx="4" fill="var(--bg-secondary, #f5f5f4)" stroke="currentColor" stroke-opacity="0.1" />

    <text x="27.5" y="12" text-anchor="middle" fill="currentColor" font-size="5" font-weight="bold" opacity="0.8">安全等級</text>

    <!-- Hot wallet bar -->
    <rect x="8" y="20" width="12" height="30" rx="2" fill="#FED7AA" />
    <rect x="8" y="38" width="12" height="12" rx="2" fill="#F7931A" />
    <text x="14" y="55" text-anchor="middle" fill="currentColor" font-size="4" opacity="0.6">熱</text>

    <!-- Cold wallet bar -->
    <rect x="35" y="20" width="12" height="30" rx="2" fill="#BFDBFE" />
    <rect x="35" y="22" width="12" height="28" rx="2" fill="#3B82F6" />
    <text x="41" y="55" text-anchor="middle" fill="currentColor" font-size="4" opacity="0.6">冷</text>
  </g>
</svg>

<style>
  .hot-wallet,
  .cold-wallet,
  .comparison {
    animation: wallet-appear 0.5s ease-out backwards;
  }

  .hot-wallet { animation-delay: 0s; }
  .divider { animation: fade-in 0.3s ease-out backwards; animation-delay: 0.3s; }
  .cold-wallet { animation-delay: 0.4s; }
  .comparison { animation-delay: 0.6s; }

  @keyframes wallet-appear {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
