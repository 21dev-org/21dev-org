---
import BookCard from '@/components/ui/BookCard.astro';
import Button from '@/components/ui/Button.astro';
import { books } from '@/data/books';

// Show featured books (first 4)
const featuredBooks = books.slice(0, 4);
---

<section class="py-20 md:py-28 bg-[var(--bg-secondary)]">
  <div class="container-wide">
    <!-- Section header -->
    <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-12">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-4">書籍</h2>
        <p class="text-lg text-[var(--text-secondary)] max-w-2xl">社群翻譯的比特幣技術書籍。</p>
      </div>
      <Button href="/books/" variant="secondary">
        全部書籍
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      </Button>
    </div>

    <!-- Books grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {featuredBooks.map((book) => <BookCard book={book} />)}
    </div>
  </div>
</section>
