---
interface Feature {
  title: string;
  description: string;
  icon: string;
  href?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  features: Feature[];
  columns?: 2 | 3 | 4;
  class?: string;
}

const { title, subtitle, features, columns = 3, class: className = '' } = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-2 lg:grid-cols-3',
  4: 'md:grid-cols-2 lg:grid-cols-4',
};

const icons: Record<string, string> = {
