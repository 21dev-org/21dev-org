};
---

<section class:list={['py-16 md:py-24', className]}>
  <div class="container-wide">
    {
      (title || subtitle) && (
        <div class="max-w-3xl mx-auto text-center mb-12">
          {title && (
            <h2 class="text-3xl md:text-4xl font-bold text-[var(--text-primary)] mb-4">{title}</h2>
          )}
          {subtitle && <p class="text-lg text-[var(--text-secondary)]">{subtitle}</p>}
        </div>
      )
    }

    <div class:list={['grid gap-6 lg:gap-8', gridCols[columns]]}>
      {
        features.map((feature) => {
          const Tag = feature.href ? 'a' : 'div';
          const iconSvg = icons[feature.icon] || icons.star;
          return (
            <Tag
              href={feature.href}
              class:list={[
                'block rounded-xl border border-[var(--border-default)] bg-[var(--surface-elevated)] p-6',
                'transition-all duration-200',
                feature.href &&
                  'group cursor-pointer hover:border-bitcoin-500/50 hover:shadow-lg hover:shadow-bitcoin-500/5',
              ]}
            >
              <div class="h-12 w-12 rounded-lg bg-bitcoin-500/10 flex items-center justify-center text-bitcoin-500 mb-4 group-hover:scale-110 transition-transform">
                <Fragment set:html={iconSvg} />
              </div>
              <h3 class="text-lg font-semibold text-[var(--text-primary)] mb-2 group-hover:text-bitcoin-500 transition-colors">
                {feature.title}
              </h3>
              <p class="text-[var(--text-secondary)] text-sm">{feature.description}</p>
              {feature.href && (
                <span class="inline-flex items-center text-sm font-medium text-bitcoin-500 mt-4">
                  了解更多
                  <svg
                    class="ml-1 h-4 w-4 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </span>
              )}
            </Tag>
          );
        })
      }
    </div>
  </div>
</section>
