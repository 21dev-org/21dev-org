---
import Button from '@/components/ui/Button.astro';
import NetworkGraph from '@/components/svg/NetworkGraph.astro';
---

<section
  class="relative overflow-hidden bg-gradient-to-b from-[var(--bg-primary)] to-[var(--bg-secondary)]"
>
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-bitcoin-500/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-bitcoin-500/5 rounded-full blur-3xl"></div>
    <NetworkGraph
      class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] sm:w-[600px] sm:h-[600px] lg:w-[800px] lg:h-[800px] opacity-20"
    />
  </div>

  <div class="container-wide relative">
    <div class="py-20 md:py-32 lg:py-40">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Main heading -->
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-[var(--text-primary)] mb-6 animate-fade-in stagger-1"
        >
          <span class="text-gradient">比特幣</span>技術中文文件
        </h1>

        <!-- Subtitle -->
        <p
          class="text-lg md:text-xl text-[var(--text-secondary)] max-w-2xl mx-auto mb-10 animate-fade-in stagger-2"
        >
          Bitcoin Core、閃電網路、Nostr — 中文技術文件、翻譯書籍、BIP 討論。
        </p>

        <!-- CTA Buttons -->
        <div
          class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in stagger-3"
        >
          <Button href="/tech/" variant="primary" size="lg"> 技術文件 </Button>
          <Button href="/books/" variant="outline" size="lg"> 書籍 </Button>
        </div>
      </div>
    </div>
  </div>
</section>
