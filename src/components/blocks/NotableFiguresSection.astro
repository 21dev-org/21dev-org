---
import Button from '@/components/ui/Button.astro';

const figures = [
  { name: 'Satoshi Nakamoto', role: '比特幣創建者', avatar: '?' },
  { name: 'Hal Finney', role: '早期開發者', avatar: 'H' },
  { name: 'Adam Back', role: 'Hashcash 發明者', avatar: 'A' },
  { name: 'Pieter Wuille', role: 'SegWit/Taproot', avatar: 'P' },
  { name: 'Andreas Antonopoulos', role: '布道者', avatar: 'A' },
];
---

<section class="py-16 md:py-20 bg-[var(--bg-secondary)]">
  <div class="container-wide">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6 mb-8">
        <div>
          <h2 class="text-2xl md:text-3xl font-bold text-[var(--text-primary)] mb-2">重要人物</h2>
          <p class="text-[var(--text-secondary)]">塑造比特幣歷史的先驅與貢獻者</p>
        </div>
        <Button href="/notable-figures/" variant="secondary">
          查看全部
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </Button>
      </div>

      <div class="flex flex-wrap gap-4 justify-center md:justify-start">
        {
          figures.map((figure) => (
            <a
              href="/notable-figures/"
              class="group flex items-center gap-3 px-4 py-3 rounded-xl bg-[var(--surface-elevated)] border border-[var(--border-default)] hover:border-bitcoin-500/50 transition-all"
            >
              <div class="w-10 h-10 rounded-full bg-bitcoin-500/10 flex items-center justify-center text-bitcoin-500 font-semibold group-hover:scale-110 transition-transform">
                {figure.avatar}
              </div>
              <div>
                <div class="font-medium text-[var(--text-primary)] text-sm">{figure.name}</div>
                <div class="text-xs text-[var(--text-tertiary)]">{figure.role}</div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</section>
