---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
  class?: string;
}

const { items, class: className = '' } = Astro.props;
---

<nav class:list={['mb-8', className]} aria-label="麵包屑">
  <ol class="flex items-center gap-2 text-sm text-[var(--text-tertiary)] flex-wrap">
    <li>
      <a href="/" class="hover:text-[var(--text-primary)] transition-colors">
        首頁
      </a>
    </li>
    {items.map((item) => (
      <>
        <li class="text-[var(--text-tertiary)]" aria-hidden="true">/</li>
        <li>
          {item.href ? (
            <a href={item.href} class="hover:text-[var(--text-primary)] transition-colors">
              {item.label}
            </a>
          ) : (
            <span class="text-[var(--text-primary)]">{item.label}</span>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>
