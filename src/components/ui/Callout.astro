---
/**
 * Callout/Alert component for highlighting important information
 * Types: info (blue), warning (yellow), success (green), danger (red), tip (purple)
 */

interface Props {
  type?: 'info' | 'warning' | 'success' | 'danger' | 'tip';
  title?: string;
  class?: string;
}

const { type = 'info', title, class: className = '' } = Astro.props;

const styles = {
  info: {
    container: 'bg-blue-500/10 border-blue-500/30',
    title: 'text-blue-600 dark:text-blue-400',
    icon: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
  },
  warning: {
    container: 'bg-yellow-500/10 border-yellow-500/30',
    title: 'text-yellow-600 dark:text-yellow-400',
    icon: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>`,
  },
  success: {
    container: 'bg-green-500/10 border-green-500/30',
    title: 'text-green-600 dark:text-green-400',
    icon: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
  },
  danger: {
    container: 'bg-red-500/10 border-red-500/30',
    title: 'text-red-600 dark:text-red-400',
    icon: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
  },
  tip: {
    container: 'bg-purple-500/10 border-purple-500/30',
    title: 'text-purple-600 dark:text-purple-400',
    icon: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
    </svg>`,
  },
};

const currentStyle = styles[type];
---

<div
  class:list={[
    'not-prose p-4 rounded-lg border',
    currentStyle.container,
    className,
  ]}
>
  {
    title && (
      <div class:list={['flex items-center gap-2 font-semibold mb-2', currentStyle.title]}>
        <Fragment set:html={currentStyle.icon} />
        <span>{title}</span>
      </div>
    )
  }
  <div class="text-sm text-[var(--text-secondary)]">
    <slot />
  </div>
</div>
