---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline' | 'white';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  external?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  class: className = '',
  external = false,
} = Astro.props;

const baseStyles = `
  inline-flex items-center justify-center font-medium rounded-lg
  transition-all duration-200 ease-out
  transform-gpu hover:-translate-y-0.5 active:translate-y-0 active:scale-[0.98]
  focus:outline-none focus-visible:ring-2 focus-visible:ring-bitcoin-500 focus-visible:ring-offset-2
`.replace(/\s+/g, ' ').trim();

const variants = {
  primary: `
    bg-bitcoin-500 text-white
    hover:bg-bitcoin-600 active:bg-bitcoin-700
    shadow-sm hover:shadow-lg hover:shadow-bitcoin-500/25
  `.replace(/\s+/g, ' ').trim(),
  secondary: `
    bg-neutral-100 text-neutral-900
    hover:bg-neutral-200
    dark:bg-neutral-800 dark:text-neutral-100 dark:hover:bg-neutral-700
    shadow-sm hover:shadow-md
  `.replace(/\s+/g, ' ').trim(),
  ghost: `
    text-[var(--text-secondary)]
    hover:text-[var(--text-primary)] hover:bg-neutral-100
    dark:hover:bg-neutral-800
  `.replace(/\s+/g, ' ').trim(),
  outline: `
    border-2 border-bitcoin-500 text-bitcoin-500
    hover:bg-bitcoin-500 hover:text-white
    hover:shadow-lg hover:shadow-bitcoin-500/25
  `.replace(/\s+/g, ' ').trim(),
  white: `
    bg-white text-bitcoin-600
    hover:bg-white/90
    shadow-sm hover:shadow-lg
  `.replace(/\s+/g, ' ').trim(),
};

const sizes = {
  sm: 'px-3 py-2 text-sm gap-1.5 min-h-[36px]',
  md: 'px-4 py-2.5 text-sm gap-2 min-h-[40px]',
  lg: 'px-6 py-3 text-base gap-2 min-h-[44px]',
};

const classes = [baseStyles, variants[variant], sizes[size], className].join(' ');

const Tag = href ? 'a' : 'button';
const externalProps = external ? { target: '_blank', rel: 'noopener noreferrer' } : {};
---

<Tag
  href={href}
  class={classes}
  {...externalProps}
>
  <slot />
</Tag>
