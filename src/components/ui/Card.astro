---
interface Props {
  href?: string;
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
}

const { href, class: className = '', padding = 'md', hover = true } = Astro.props;

const paddingStyles = {
  none: '',
  sm: 'p-3 sm:p-4',
  md: 'p-4 sm:p-6',
  lg: 'p-5 sm:p-8',
};

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'block rounded-xl border border-[var(--border-default)] bg-[var(--surface-elevated)]',
    paddingStyles[padding],
    hover &&
      'transition-all duration-200 ease-out transform-gpu hover:-translate-y-1 hover:border-bitcoin-500/50 hover:shadow-xl hover:shadow-bitcoin-500/10 active:translate-y-0 active:scale-[0.99]',
    href && 'cursor-pointer',
    className,
  ]}
>
  <slot />
</Tag>
