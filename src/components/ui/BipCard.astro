---
import Tag from './Tag.astro';
import type { BIP } from '@/data/bips';

interface Props {
  bip: BIP;
  class?: string;
}

const { bip, class: className = '' } = Astro.props;

const statusVariants: Record<string, 'success' | 'bitcoin' | 'warning' | 'default'> = {
  Final: 'success',
  Active: 'bitcoin',
  Proposed: 'default',
  Draft: 'default',
  Replaced: 'warning',
  Rejected: 'warning',
  Withdrawn: 'warning',
};

const importanceColors: Record<string, string> = {
  fundamental: 'border-l-purple-500',
  critical: 'border-l-bitcoin-500',
  important: 'border-l-blue-500',
  standard: 'border-l-neutral-400',
};
---

<a
  href={`/bips/bip-${String(bip.number).padStart(4, '0')}`}
  class:list={[
    'group block rounded-xl border border-[var(--border-default)] bg-[var(--surface-elevated)] p-4 sm:p-6',
    'border-l-4 transition-all duration-200 ease-out transform-gpu hover:-translate-y-1 hover:border-bitcoin-500/50 hover:shadow-xl hover:shadow-bitcoin-500/10 active:translate-y-0 active:scale-[0.99]',
    importanceColors[bip.importance],
    className,
  ]}
>
  <div class="flex flex-col md:flex-row md:items-center gap-4">
    <div class="flex-shrink-0">
      <div class="w-16 h-16 rounded-lg bg-bitcoin-500/10 flex items-center justify-center">
        <span class="text-lg font-bold text-bitcoin-500">
          {bip.number}
        </span>
      </div>
    </div>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-1">
        <Tag variant={statusVariants[bip.status] || 'default'} size="sm">
          {bip.status}
        </Tag>
        <span class="text-xs text-[var(--text-tertiary)]">{bip.type}</span>
      </div>
      <h2 class="text-lg font-semibold text-[var(--text-primary)] group-hover:text-bitcoin-500 transition-colors">
        BIP-{bip.number}: {bip.titleZh}
      </h2>
      <p class="text-sm text-[var(--text-tertiary)] mt-0.5">{bip.title}</p>
      <p class="text-sm text-[var(--text-secondary)] mt-2 line-clamp-2">
        {bip.summary}
      </p>
    </div>
    <div class="flex-shrink-0">
      <svg class="h-5 w-5 text-[var(--text-tertiary)] group-hover:text-bitcoin-500 group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </div>
</a>
