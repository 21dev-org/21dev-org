---
import BaseLayout from './BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';

type JsonLdSchema = Record<string, unknown>;

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  noIndex?: boolean;
  schemas?: JsonLdSchema[];
}

const { title, description, ogImage, noIndex, schemas } = Astro.props;
---

<BaseLayout title={title} description={description} ogImage={ogImage} noIndex={noIndex} schemas={schemas}>
  <Header />
  <main id="main-content">
    <slot />
  </main>
  <Footer />
</BaseLayout>
