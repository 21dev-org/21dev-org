---
import PageLayout from '@/layouts/PageLayout.astro';
import Card from '@/components/ui/Card.astro';
import Tag from '@/components/ui/Tag.astro';

const bips = [
  {
    number: 1,
    title: 'BIP Purpose and Guidelines',
    titleZh: 'BIP 目的與準則',
    status: 'Active',
    type: 'Process',
    summary: '定義 Bitcoin Improvement Proposals 的格式、流程與生命週期。',
  },
  {
    number: 2,
    title: 'BIP Process, revised',
    titleZh: 'BIP 流程',
    status: 'Active',
    type: 'Process',
    summary: '定義 BIP 的提交、審核和實施流程，取代 BIP-1。',
  },
  {
    number: 8,
    title: 'Version bits with lock-in by height',
    titleZh: 'Version Bits 改進',
    status: 'Draft',
    type: 'Informational',
    summary: '改進的軟分叉部署機制，支持強制啟用（LOT）選項。',
  },
  {
    number: 9,
    title: 'Version bits with timeout and delay',
    titleZh: 'Version Bits',
    status: 'Final',
    type: 'Informational',
    summary: '使用區塊版本號位元進行軟分叉部署的標準機制。',
  },
  {
    number: 11,
    title: 'M-of-N Standard Transactions',
    titleZh: 'M-of-N 標準交易',
    status: 'Final',
    type: 'Standards Track',
    summary: '定義多重簽名交易的標準腳本格式。',
  },
  {
    number: 13,
    title: 'Address Format for pay-to-script-hash',
    titleZh: 'P2SH 地址格式',
    status: 'Final',
    type: 'Standards Track',
    summary: '定義 P2SH 地址的 Base58Check 編碼格式，以 3 開頭。',
  },
  {
    number: 16,
    title: 'Pay to Script Hash',
    titleZh: 'P2SH 腳本哈希支付',
    status: 'Final',
    type: 'Standards Track',
    summary: '定義了 P2SH 輸出類型，允許將複雜腳本的哈希作為地址使用。',
  },
  {
    number: 21,
    title: 'URI Scheme',
    titleZh: 'URI Scheme',
    status: 'Proposed',
    type: 'Standards Track',
    summary: '定義比特幣支付的 URI 格式，讓用戶可以透過點擊連結或掃描 QR Code 發起支付。',
  },
  {
    number: 32,
    title: 'Hierarchical Deterministic Wallets',
    titleZh: '階層式確定性錢包',
    status: 'Final',
    type: 'Standards Track',
    summary: '定義從單一種子派生多個密鑰對的標準方法，成為現代錢包的基礎。',
  },
  {
    number: 39,
    title: 'Mnemonic code for generating deterministic keys',
    titleZh: '助記詞生成確定性密鑰',
    status: 'Proposed',
    type: 'Standards Track',
    summary: '定義將隨機數轉換為易記單詞序列的標準，讓使用者可以備份錢包。',
  },
  {
    number: 44,
    title: 'Multi-Account Hierarchy for Deterministic Wallets',
    titleZh: '確定性錢包的多帳戶層次結構',
    status: 'Proposed',
    type: 'Standards Track',
    summary: '定義 HD 錢包的標準派生路徑結構，支持多幣種和多帳戶。',
  },
  {
    number: 65,
    title: 'OP_CHECKLOCKTIMEVERIFY',
    titleZh: '絕對時間鎖操作碼',
    status: 'Final',
    type: 'Standards Track',
    summary: '引入絕對時間鎖操作碼，允許資金在特定區塊高度或時間之前被鎖定。',
  },
  {
    number: 66,
    title: 'Strict DER signatures',
    titleZh: '嚴格 DER 簽章',
    status: 'Final',
    type: 'Standards Track',
    summary: '強制要求比特幣交易使用嚴格的 DER 編碼簽章格式，修復潛在安全漏洞。',
  },
  {
    number: 68,
    title: 'Relative lock-time using consensus-enforced sequence numbers',
    titleZh: '相對時間鎖',
    status: 'Final',
    type: 'Standards Track',
    summary: '重新定義 nSequence 欄位以支援相對時間鎖，是閃電網路的關鍵基礎設施。',
  },
  {
    number: 84,
    title: 'Derivation scheme for P2WPKH based accounts',
    titleZh: 'Native SegWit 派生路徑',
    status: 'Proposed',
    type: 'Standards Track',
    summary: '定義 Native SegWit (bech32) 地址的 HD 錢包派生路徑標準。',
  },
  {
    number: 112,
    title: 'OP_CHECKSEQUENCEVERIFY',
    titleZh: '相對時間鎖操作碼',
    status: 'Final',
    type: 'Standards Track',
    summary: '在腳本中驗證相對時間鎖，是閃電網路撤銷機制的核心組件。',
  },
  {
    number: 125,
    title: 'Opt-in Full Replace-by-Fee Signaling',
    titleZh: '選擇性費用替換 (RBF)',
    status: 'Proposed',
    type: 'Standards Track',
    summary: '定義交易如何選擇加入 Replace-By-Fee 機制，允許以更高費用替換未確認交易。',
  },
  {
    number: 141,
    title: 'Segregated Witness (Consensus layer)',
    titleZh: '隔離見證（共識層）',
    status: 'Final',
    type: 'Standards Track',
    summary: '比特幣最重要的升級之一，解決交易延展性問題並提高區塊容量。',
  },
  {
    number: 143,
    title: 'Transaction Signature Verification for Version 0 Witness Program',
    titleZh: 'SegWit 交易簽章驗證',
    status: 'Final',
    type: 'Standards Track',
    summary: '定義 SegWit 交易的簽章哈希演算法，解決二次哈希問題並修復簽章可塑性。',
  },
  {
    number: 144,
    title: 'Segregated Witness (Peer Services)',
    titleZh: 'SegWit 序列化',
    status: 'Final',
    type: 'Standards Track',
    summary: '定義隔離見證交易的網路傳輸和序列化格式，包含 marker、flag 和見證資料。',
  },
  {
    number: 152,
    title: 'Compact Block Relay',
    titleZh: '緊湊區塊傳輸',
    status: 'Final',
    type: 'Standards Track',
    summary: '透過壓縮區塊傳輸減少頻寬使用和傳播延遲，提升比特幣網路效能。',
  },
  {
    number: 157,
    title: 'Client Side Block Filtering',
    titleZh: '輕客戶端區塊過濾器',
    status: 'Draft',
    type: 'Standards Track',
    summary: '定義輕客戶端向全節點請求和驗證區塊過濾器的 P2P 協議，提供隱私優先的同步方式。',
  },
  {
    number: 158,
    title: 'Compact Block Filters for Light Clients',
    titleZh: '緊湊區塊過濾器',
    status: 'Draft',
    type: 'Standards Track',
    summary: '定義緊湊區塊過濾器的格式，使用 Golomb-Rice 編碼壓縮資料，搭配 BIP-157 使用。',
  },
  {
    number: 173,
    title: 'Base32 address format for native v0-16 witness outputs',
    titleZh: 'Bech32 地址格式',
    status: 'Final',
    type: 'Standards Track',
    summary: '定義 SegWit 地址的 Bech32 編碼格式，以 bc1 開頭。',
  },
  {
    number: 174,
    title: 'Partially Signed Bitcoin Transaction Format',
    titleZh: 'PSBT 部分簽章交易格式',
    status: 'Proposed',
    type: 'Standards Track',
    summary: '定義標準格式用於傳遞未完成簽章的交易，支持多簽和硬體錢包。',
  },
  {
    number: 322,
    title: 'Generic Signed Message Format',
    titleZh: '通用消息簽章',
    status: 'Draft',
    type: 'Standards Track',
    summary: '定義適用於所有 Bitcoin 腳本類型的通用消息簽章格式，取代傳統簽章方式。',
  },
  {
    number: 324,
    title: 'Version 2 Peer-to-Peer Message Transport Protocol',
    titleZh: 'v2 P2P 傳輸協議',
    status: 'Final',
    type: 'Standards Track',
    summary: '為比特幣節點間通訊提供加密和認證，增強網路隱私性。',
  },
  {
    number: 327,
    title: 'MuSig2 for BIP-340 Compatible Multi-Signatures',
    titleZh: 'MuSig2 多簽聚合',
    status: 'Draft',
    type: 'Standards Track',
    summary: '定義 MuSig2 協議，實現 Schnorr 多重簽章的密鑰和簽章聚合。',
  },
  {
    number: 329,
    title: 'Wallet Labels Export Format',
    titleZh: '錢包標籤導出格式',
    status: 'Draft',
    type: 'Applications',
    summary: '定義錢包標籤的標準導出格式（JSON Lines），便於在不同錢包間遷移和備份。',
  },
  {
    number: 340,
    title: 'Schnorr Signatures for secp256k1',
    titleZh: 'secp256k1 的 Schnorr 簽章',
    status: 'Final',
    type: 'Standards Track',
    summary: 'Taproot 升級的基礎，引入更高效的 Schnorr 簽章方案。',
  },
  {
    number: 341,
    title: 'Taproot: SegWit version 1 spending rules',
    titleZh: 'Taproot: SegWit 版本 1 花費規則',
    status: 'Final',
    type: 'Standards Track',
    summary: '引入新的腳本類型，提供更強的隱私性和更高效的智能合約能力。',
  },
  {
    number: 342,
    title: 'Validation of Taproot Scripts',
    titleZh: 'Taproot 腳本驗證',
    status: 'Final',
    type: 'Standards Track',
    summary: '定義 Tapscript 的驗證規則，支援新的腳本功能。',
  },
  {
    number: 350,
    title: 'Bech32m format for v1+ witness addresses',
    titleZh: 'Bech32m 地址格式',
    status: 'Final',
    type: 'Standards Track',
    summary: '修正 Bech32 編碼的弱點，用於 SegWit v1+ (Taproot) 地址。',
  },
  {
    number: 370,
    title: 'PSBT Version 2',
    titleZh: 'PSBT 版本 2',
    status: 'Draft',
    type: 'Standards Track',
    summary: '改進的 PSBT 格式，支援更靈活的交易構建和多方協議。',
  },
  {
    number: 380,
    title: 'Output Script Descriptors General Operation',
    titleZh: 'Output Descriptors 基礎',
    status: 'Final',
    type: 'Informational',
    summary: '定義輸出腳本描述符的通用語法和語義，作為整個描述符系列的基礎規範。',
  },
  {
    number: 381,
    title: 'Non-Segwit Output Script Descriptors',
    titleZh: '非 SegWit 描述符',
    status: 'Final',
    type: 'Informational',
    summary: '定義 pk()、pkh() 和 sh() 描述符函數，用於傳統比特幣腳本類型。',
  },
  {
    number: 382,
    title: 'Segwit Output Script Descriptors',
    titleZh: 'SegWit 描述符',
    status: 'Final',
    type: 'Informational',
    summary: '定義 wpkh() 和 wsh() 描述符函數，用於原生隔離見證腳本類型。',
  },
  {
    number: 383,
    title: 'Multisig Output Script Descriptors',
    titleZh: '多簽描述符',
    status: 'Final',
    type: 'Informational',
    summary: '定義 multi() 和 sortedmulti() 描述符函數，用於多重簽章腳本。',
  },
  {
    number: 384,
    title: 'combo() Output Script Descriptors',
    titleZh: '組合描述符',
    status: 'Final',
    type: 'Informational',
    summary: '定義 combo() 描述符函數，自動生成多種腳本類型以提高相容性。',
  },
  {
    number: 385,
    title: 'raw() and addr() Output Script Descriptors',
    titleZh: '原始描述符',
    status: 'Final',
    type: 'Informational',
    summary: '定義 raw() 和 addr() 描述符函數，用於表示任意腳本和地址。',
  },
  {
    number: 386,
    title: 'tr() Output Script Descriptors',
    titleZh: 'Taproot 描述符',
    status: 'Final',
    type: 'Informational',
    summary: '定義 tr() 描述符函數，用於表示 Taproot (SegWit v1) 輸出。',
  },
];

const statusVariants: Record<string, 'success' | 'bitcoin' | 'default'> = {
  'Final': 'success',
  'Active': 'bitcoin',
  'Proposed': 'default',
};
---

<PageLayout
  title="BIP 討論"
  description="Bitcoin Improvement Proposals 的中文解析與討論。"
>
  <!-- Hero section -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-[var(--bg-secondary)] to-[var(--bg-primary)]">
    <div class="container-wide">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-[var(--text-primary)] mb-6">
          BIP 討論
        </h1>
        <p class="text-xl text-[var(--text-secondary)]">
          Bitcoin Improvement Proposals (BIPs) 是比特幣協議改進的標準化流程。
          了解這些重要的技術提案，掌握比特幣的發展方向。
        </p>
      </div>
    </div>
  </section>

  <!-- BIPs list -->
  <section class="py-16 md:py-24">
    <div class="container-wide">
      <div class="grid gap-4">
        {bips.map((bip) => (
          <Card href={`/bips/bip-${String(bip.number).padStart(4, '0')}`} class="group">
            <div class="flex flex-col md:flex-row md:items-center gap-4">
              <div class="flex-shrink-0">
                <div class="w-16 h-16 rounded-lg bg-bitcoin-500/10 flex items-center justify-center">
                  <span class="text-lg font-bold text-bitcoin-500">
                    {bip.number}
                  </span>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <Tag variant={statusVariants[bip.status] || 'default'} size="sm">
                    {bip.status}
                  </Tag>
                  <span class="text-xs text-[var(--text-tertiary)]">{bip.type}</span>
                </div>
                <h2 class="text-lg font-semibold text-[var(--text-primary)] group-hover:text-bitcoin-500 transition-colors">
                  BIP-{bip.number}: {bip.titleZh}
                </h2>
                <p class="text-sm text-[var(--text-tertiary)] mt-0.5">{bip.title}</p>
                <p class="text-sm text-[var(--text-secondary)] mt-2 line-clamp-2">
                  {bip.summary}
                </p>
              </div>
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-[var(--text-tertiary)] group-hover:text-bitcoin-500 group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- More BIPs -->
  <section class="py-16 md:py-24 bg-[var(--bg-secondary)]">
    <div class="container-wide text-center">
      <h2 class="text-3xl font-bold text-[var(--text-primary)] mb-4">
        探索更多 BIPs
      </h2>
      <p class="text-lg text-[var(--text-secondary)] mb-8 max-w-2xl mx-auto">
        這裡只列出了部分重要的 BIPs。查看完整的 BIP 列表，了解比特幣協議的所有改進提案。
      </p>
      <a
        href="https://github.com/bitcoin/bips"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-[var(--surface-elevated)] border border-[var(--border-default)] rounded-lg text-[var(--text-primary)] hover:border-bitcoin-500 transition-colors"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
        查看 GitHub 上的 BIP 倉庫
      </a>
    </div>
  </section>
</PageLayout>
