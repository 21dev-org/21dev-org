---
import PageLayout from '@/layouts/PageLayout.astro';
import Button from '@/components/ui/Button.astro';
import Card from '@/components/ui/Card.astro';

const learningPaths = [
  {
    title: '入門',
    description: '比特幣是什麼、如何運作、錢包怎麼用。',
    href: '/learn/basics/',
    articles: [
      { title: '什麼是比特幣', href: '/learn/basics/what-is-bitcoin' },
      { title: '比特幣如何運作', href: '/learn/basics/how-bitcoin-works' },
      { title: '錢包使用指南', href: '/learn/basics/wallet-guide' },
    ],
  },
  {
    title: '進階',
    description: 'UTXO 模型、交易結構、腳本基礎。',
    href: '/learn/intermediate/',
    articles: [
      { title: 'UTXO 模型', href: '/learn/intermediate/utxo-model' },
      { title: '交易結構', href: '/learn/intermediate/transaction-structure' },
    ],
  },
  {
    title: '開發',
    description: 'Script 語言、Taproot、SegWit。',
    href: '/learn/advanced/',
    articles: [
      { title: 'Script 語言', href: '/learn/advanced/script-language' },
      { title: 'Taproot 升級', href: '/learn/advanced/taproot' },
    ],
  },
];
---

<PageLayout
  title="學習中心"
  description="比特幣技術文件與教學。"
>
  <!-- Hero section -->
  <section class="py-16 md:py-24 bg-gradient-to-b from-[var(--bg-secondary)] to-[var(--bg-primary)]">
    <div class="container-wide">
      <div class="max-w-3xl">
        <h1 class="text-4xl md:text-5xl font-bold text-[var(--text-primary)] mb-6">
          學習中心
        </h1>
        <p class="text-xl text-[var(--text-secondary)]">
          從基礎到進階，按自己的節奏學。
        </p>
      </div>
    </div>
  </section>

  <!-- Learning paths -->
  <section class="py-16 md:py-24">
    <div class="container-wide">
      <div class="grid md:grid-cols-3 gap-8">
        {learningPaths.map((path) => (
          <Card class="flex flex-col" padding="lg">
            <h2 class="text-2xl font-bold text-[var(--text-primary)] mb-3">
              {path.title}
            </h2>
            <p class="text-[var(--text-secondary)] mb-6 flex-1">
              {path.description}
            </p>
            <div class="space-y-2 mb-6">
              {path.articles.map((article) => (
                <a
                  href={article.href}
                  class="block px-3 py-2 -mx-3 rounded-lg text-sm text-[var(--text-secondary)] hover:text-[var(--text-primary)] hover:bg-neutral-100 dark:hover:bg-neutral-800 transition-colors"
                >
                  {article.title}
                </a>
              ))}
            </div>
            <Button href={path.href} variant="secondary" class="w-full">
              更多
            </Button>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-12 md:py-16 bg-[var(--bg-secondary)]">
    <div class="container-wide">
      <p class="text-[var(--text-secondary)]">
        不知道從哪開始？先讀<a href="/learn/basics/what-is-bitcoin" class="text-bitcoin-500 hover:underline">什麼是比特幣</a>，大概 5 分鐘。
      </p>
    </div>
  </section>
</PageLayout>
