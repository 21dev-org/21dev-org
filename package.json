{
  "name": "21dev-org",
  "type": "module",
  "version": "1.0.0",
  "description": "21dev.org - Bitcoin Education Platform for Chinese Community",
  "author": "21dev.org Community",
  "license": "MIT",
  "homepage": "https://21dev.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/21dev-org/21dev-org.git"
  },
  "bugs": {
    "url": "https://github.com/21dev-org/21dev-org/issues"
  },
  "keywords": [
    "bitcoin",
    "education",
    "chinese",
    "traditional-chinese",
    "astro",
    "lightning-network",
    "nostr",
    "bip",
    "cryptocurrency"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build && pagefind --site dist --glob \"**/*.html\" && node scripts/generate-sitemaps.mjs",
    "build:og": "node scripts/generate-og-images.mjs",
    "build:full": "npm run build:og && npm run build",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.{astro,ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{astro,ts,js,json,md}\""
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.3",
    "astro": "^4.16.18",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "happy-dom": "^20.0.11",
    "pagefind": "^1.4.0",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "satori": "^0.18.3",
    "sharp": "^0.34.5",
    "vitest": "^4.0.16"
  }
}
